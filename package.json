{
  "name": "novel-assistant-æ”¹",
  "displayName": "Interactive Story Game Engine",
  "description": "An extension to play interactive story games with LLMs.",
  "version": "0.2.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:interactive-story.initializeProject",
    "onCommand:interactive-story.openChat",
    "onCommand:interactive-story.exportLogToMarkdown",
    "onWebviewPanel:interactive-story.chatView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "interactive-story.initializeProject",
        "title": "Story Game: Initialize New Scenario Project",
        "category": "Interactive Story"
      },
      {
        "command": "interactive-story.openChat",
        "title": "Story Game: Open Chat / Start Game",
        "category": "Interactive Story"
      },
      {
        "command": "interactive-story.exportLogToMarkdown",
        "title": "Story Game: Export Log to Markdown",
        "category": "Interactive Story"
      }
    ],
    "keybindings": [
      {
        "command": "interactive-story.openChat",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        ".storygamesetting.json": "jsonc"
      }
    },
    "configuration": {
      "title": "Interactive Story Game Engine",
      "properties": {
        "interactive-story.provider": {
          "type": "string",
          "enum": [
            "openrouter",
            "openai"
          ],
          "default": "openrouter",
          "description": "The LLM provider to use."
        },
        "interactive-story.model": {
          "type": "string",
          "default": "anthropic/claude-3.5-sonnet",
          "description": "The model identifier (e.g., 'anthropic/claude-3.5-sonnet', 'gpt-4o')."
        },
        "interactive-story.endpoint": {
          "type": "string",
          "default": "https://openrouter.ai/api/v1/chat/completions",
          "description": "The API endpoint for chat completions."
        },
        "interactive-story.temperature": {
          "type": "number",
          "default": 0.8,
          "minimum": 0,
          "maximum": 2,
          "description": "Controls randomness. Higher is more creative."
        },
        "interactive-story.maxTokens": {
          "type": "integer",
          "default": 3000,
          "description": "The maximum number of tokens to generate in a completion."
        },
        "interactive-story.providerOptions.openrouter.httpReferer": {
          "type": "string",
          "default": "",
          "description": "(Optional) The HTTP-Referer header to send to OpenRouter."
        },
        "interactive-story.providerOptions.openrouter.xTitle": {
          "type": "string",
          "default": "Interactive Story Game for VS Code",
          "description": "(Optional) The X-Title header to send to OpenRouter for identifying your app."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "keytar": "^7.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}