{
  "name": "NovelADV",
  "displayName": "Interactive Novel Game Engine",
  "description": "An extension to play interactive Novel games with LLMs.",
  "version": "0.2.0",
  "publisher": "orenodinner",
  "license": "AGPL-3.0", 
  "repository": { 
    "type": "git",
    "url": "https://github.com/orenodinner/NovelADV.git"
  },


  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:interactive-story.initializeProject",
    "onCommand:interactive-story.openChat",
    "onCommand:interactive-story.exportLogToMarkdown",
    "onCommand:interactive-story.forkProject",
    "onCommand:interactive-story.undoLastTurn",
    "onWebviewPanel:interactive-story.chatView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "interactive-story.initializeProject",
        "title": "New Novel (Initialize New Scenario Project)",
        "category": "NovelADV"
      },
      {
        "command": "interactive-story.forkProject",
        "title": "Fork (Fork Scenario from Current Project)",
        "category": "NovelADV"
      },
      {
        "command": "interactive-story.openChat",
        "title": "Start (Open Chat)",
        "category": "NovelADV"
      },
      {
        "command": "interactive-story.exportLogToMarkdown",
        "title": "Export Log to Markdown",
        "category": "NovelADV"
      },
      {
        "command": "interactive-story.undoLastTurn",
        "title": "Undo",
        "category": "NovelADV"
      }
    ],
    "keybindings": [
      {
        "command": "interactive-story.openChat",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        ".storygamesetting.json": "jsonc"
      }
    },
    "configuration": {
      "title": "Interactive Novel Game Engine",
      "properties": {
        "interactive-story.chat.provider": {
          "type": "string",
          "enum": [
            "openrouter",
            "openai"
          ],
          "default": "openrouter",
          "description": "[Chat] The LLM provider to use for generating story dialogue.",
          "order": 1
        },
        "interactive-story.chat.model": {
          "type": "string",
          "default": "qwen/qwen3-235b-a22b-2507",
          "description": "[Chat] The model identifier for story generation (e.g., 'qwen/qwen3-235b-a22b-2507').",
          "order": 2
        },
        "interactive-story.chat.endpoint": {
          "type": "string",
          "default": "https://openrouter.ai/api/v1/chat/completions",
          "description": "[Chat] The API endpoint for chat completions.",
          "order": 3
        },
        "interactive-story.chat.temperature": {
          "type": "number",
          "default": 0.8,
          "minimum": 0,
          "maximum": 2,
          "description": "[Chat] Controls randomness for story generation. Higher is more creative.",
          "order": 4
        },
        "interactive-story.chat.maxTokens": {
          "type": "integer",
          "default": 3000,
          "description": "[Chat] The maximum number of tokens to generate in a chat completion.",
          "order": 5
        },
        "interactive-story.chat.providerOptions.openrouter.httpReferer": {
          "type": "string",
          "default": "",
          "description": "[Chat] (Optional) The HTTP-Referer header to send to OpenRouter.",
          "order": 6
        },
        "interactive-story.chat.providerOptions.openrouter.xTitle": {
          "type": "string",
          "default": "Interactive Novel Game for VS Code",
          "description": "[Chat] (Optional) The X-Title header to send to OpenRouter for identifying your app.",
          "order": 7
        },
        "interactive-story.summarization.provider": {
          "type": "string",
          "enum": [
            "openrouter",
            "openai"
          ],
          "default": "openrouter",
          "description": "[Summarization] The LLM provider for meta-tasks like summarizing and character updates.",
          "order": 8
        },
        "interactive-story.summarization.model": {
          "type": "string",
          "default": "qwen/qwen3-235b-a22b-2507",
          "description": "[Summarization] The model identifier for meta-tasks. A fast and capable model is recommended.",
          "order": 9
        },
        "interactive-story.summarization.endpoint": {
          "type": "string",
          "default": "https://openrouter.ai/api/v1/chat/completions",
          "description": "[Summarization] The API endpoint for meta-task completions.",
          "order": 10
        },
        "interactive-story.summarization.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 2,
          "description": "[Summarization] Controls randomness for meta-tasks. Lower is better for factual summaries.",
          "order": 11
        },
        "interactive-story.summarization.maxTokens": {
          "type": "integer",
          "default": 2000,
          "description": "[Summarization] The maximum number of tokens to generate for meta-tasks.",
          "order": 12
        },
        "interactive-story.summarization.providerOptions.openrouter.httpReferer": {
          "type": "string",
          "default": "",
          "description": "[Summarization] (Optional) The HTTP-Referer header for OpenRouter.",
          "order": 13
        },
        "interactive-story.summarization.providerOptions.openrouter.xTitle": {
          "type": "string",
          "default": "Interactive Novel Game for VS Code (Summarizer)",
          "description": "[Summarization] (Optional) The X-Title header for OpenRouter.",
          "order": 14
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "keytar": "^7.9.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}